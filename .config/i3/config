#
#		general
#

set $mod                Mod4
font                    pango:monospace 8
floating_modifier       $mod
gaps outer              0
gaps inner              8
for_window              [class="^.*"] border pixel 0
assign [class="Chromium"] 9


#
#		window borders: border  bg      fg     indicator
#

client.focused          #FEFEFE #FEFEFE #ffffff #FEFEFE
client.focused_inactive #333333 #333333 #ffffff #484e50
client.unfocused        #333333 #333333 #888888 #292d2e
client.urgent           #2f343a #900000 #ffffff #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000

#
#		keybinds
#

bindsym XF86AudioRaiseVolume    exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume    exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute           exec --no-startup-id pactl set-sink-mute 0 toggle

bindsym $mod+b                  exec firefox

bindsym $mod+Return             exec alacritty
bindsym $mod+q                  restart
bindsym $mod+d                  exec dmenu_run -h 30
bindsym $mod+e                  exec alacritty -e ranger
bindsym $mod+Shift+c            kill
bindsym $mod+Shift+r            restart
bindsym $mod+Shift+p            exec pcmanfm
bindsym --release Print         exec scrot 'screenshot_%Y%m%d_%H%M%S.png' -q 100 -e 'mkdir -p ~/screenshots && mv $f ~/screenshots && xclip -selection clipboard -t image/png -i ~/screenshots/`ls -1 -t ~/screenshots | head -1`'
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

bindsym $mod+h                  focus left
bindsym $mod+j                  focus down
bindsym $mod+k                  focus up
bindsym $mod+l                  focus right

bindsym $mod+Shift+h            move left
bindsym $mod+Shift+j            move down
bindsym $mod+Shift+k            move up
bindsym $mod+Shift+l            move right

bindsym $mod+i                  split h
bindsym $mod+v                  split v

bindsym $mod+f                  fullscreen toggle
bindsym $mod+Shift+space        floating toggle

#
#		workspace switching
#

set $ws1                "1"
set $ws2                "2"
set $ws3                "3"
set $ws4                "4"
set $ws5                "5"
set $ws6                "6"
set $ws7                "7"
set $ws8                "8"
set $ws9                "9"
set $ws10               "10"

bindsym $mod+1          workspace number $ws1
bindsym $mod+2          workspace number $ws2
bindsym $mod+3          workspace number $ws3
bindsym $mod+4          workspace number $ws4
bindsym $mod+5          workspace number $ws5
bindsym $mod+6          workspace number $ws6
bindsym $mod+7          workspace number $ws7
bindsym $mod+8          workspace number $ws8
bindsym $mod+9          workspace number $ws9
bindsym $mod+0          workspace number $ws10

bindsym $mod+Shift+1    move container to workspace number $ws1
bindsym $mod+Shift+2    move container to workspace number $ws2
bindsym $mod+Shift+3    move container to workspace number $ws3
bindsym $mod+Shift+4    move container to workspace number $ws4
bindsym $mod+Shift+5    move container to workspace number $ws5
bindsym $mod+Shift+6    move container to workspace number $ws6
bindsym $mod+Shift+7    move container to workspace number $ws7
bindsym $mod+Shift+8    move container to workspace number $ws8
bindsym $mod+Shift+9    move container to workspace number $ws9
bindsym $mod+Shift+0    move container to workspace number $ws10

#
#		window resizing
#

mode "resize" {
        bindsym Left    resize grow width 5 px or 5 ppt
        bindsym Down    resize grow height 5 px or 5 ppt
        bindsym Up      resize shrink height 5 px or 5 ppt
        bindsym Right   resize shrink width 5 px or 5 ppt

        bindsym $mod+r  mode "default"
}

bindsym $mod+r          mode "resize"

exec_always --no-startup-id /home/tarun/.config/polybar/launch.sh &
exec_always --no-startup-id /home/tarun/.config/i3/autostart-i3 &
exec_always --no-startup-id        nm-applet &
exec --no-startup-id        nitrogen --restore &

for_window [class="Termite"] floating enable
