#!/bin/sh

case $BUTTON in
    1) kill -37 $(pidof dwmblocks) ;;
    6) alacritty -e nmtui ;;
esac

case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
	down) wifiicon="якй" ;;
	up) wifiicon="$(awk '/^\s*w/ { print "яки", int($3 * 100 / 70) "%" }' /proc/net/wireless)" ;;
esac

printf "%s\n" "$wifiicon"
